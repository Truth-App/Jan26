
<div class="row">
    <div class="col s12 m8">       
        <h3>{{story.title}}</h3>        
        <div class="card story">
            <div class="card-content">                
                <span class="card-title">{{{formatDate story.createdAt 'MMMM Do YYYY, h:mm:ss a'}}}</span>
                {{{story.body}}}
            </div>
        </div>
    </div>    
    <div class="col s12 m8">
        <h3>Replies</h3>
            <div class="card story">
                <div class="card-content">
                    {{#each story.rep1}}
                    <ui>
                        <li class="card-title">
                            {{rep1}}
                        </li>
                    </ui>    
                    {{/each}}   
                </div>            
            </div>                            
    </div>
</div>


<div class="row">
    <form action="/stories/{{story._id}}/response" method="POST" class="col s12">
        <input type="hidden" name="_method" value="PUT">
        <div class="row">
	       <div class="hidden" id="rep">
        	    <label for="rep1">Please enter your reply</label>
	            <input type="text" id="rep1" name="rep1">

                <input type="submit" value="Save" class="btn">
                <input type="button" value="Cancel" class="btn orange" onclick="text(1)"/>
	
		        <script>
		            function text(x) {
   			            if (x == 0) document.getElementById("rep").style.display = "block"
            		    else document.getElementById("rep").style.display = "none"
            		    return;
        		    }
		        </script>
           </div>
       </div>
    </form>
</div>