<div class="row">
    <div class="col s12 m4">
        <div class="card">
      	   <div class="card-content center-align">
                <h6><b>Recent prayer requests</b></h6>
		        {{#if stories}}
    		        <table class="striped">
        	            <thead>
            	            <tr>
		                        <th>Title</th>
                	            <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each stories}}
                                <tr>
                                    <td><a href="/stories/{{_id}}">{{title}}</a></td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                {{else}}
                    <p>No requests available under this section</p>
                {{/if}}
            </div>
            <div class="card-action center-align">
                <a href="/stories/{{_id}}" class="btn grey">Read More</a>
            </div>
        </div>
    </div>
</div>
